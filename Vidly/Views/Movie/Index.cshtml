@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies List</h2>
@if (!Model.Any())
{

    <p> No movie is available to rent.</p>
}
else
{
    <table border="1">
        <tr>
            <th>
                Name
            </th>
            <th>
                Genre
            </th>
        </tr>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                  @Html.ActionLink(movie.Name, "Details","Movie", new { Id = movie.Id}, null)
                </td>
                <td>
                    @movie.Genre.Type
                </td>
            </tr>
            

        }
    </table>
   
}
